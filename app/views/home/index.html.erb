            <div class="col">
              <div class="badge">PM10</div>
              <div class="toracic-particles value">--</div>
            </div>
            <div class="col">
              <div class="badge">PM2.5</div>
              <div class="respirable-particles value">--</div>
            </div>
            <div class="col">
              <div class="badge">O3</div>
              <div class="ozone value">--</div>
            </div>
          </div>
        </article>
      </div>

      <div class="row">
        <article class="item forecast">

          <div class="table row">
            <div class="col th">
              <a href="#" class="modal-link" data-modal="#forecast-modal">
                <span class="info-icon"></span>
              </a>
            </div>
            <div class="col th"><div class="badge">PM10</div></div>
